#include<stdio.h>
int main()
{
  int x,y;
  double result;
  char a;
  printf("toplama yapmak için '+' ye basiniz,çıkarma yapmak için '-',çarpma yapmak için '*' ve bölme yapmak için '/' basınız.\n");
  scanf("%c",&a);
  if (a=='+')
  {
    printf("iki sayı giriniz:");
    scanf("%d%d",&x, &y);
    result= x+y;
    printf("sayilarin toplami:%d",result);
  }
  else if(a=='-'){
    printf("iki sayi giriniz");
    scanf("%d %d " , &x ,&y);
    result=x-y;
    printf("sayıların çıkarımı:%d" ,result);
  }
  else if(a=='*'){
    printf("iki sayi giriniz");
    scanf("%d %d" ,&x ,&y);
    result=x*y;
    printf("sayıların çarpımı=%d",result);
  }
  else{
    printf("iki sayi giriniz");
    scanf("%d %d" ,&x ,&y);
    result=x/y;
    printf("sayıların bölümü=%d",result);
  }
  
  
return0;
}
