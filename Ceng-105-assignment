#include<stdio.h>
int main()
{
  double x,y,result;
  char a;
  printf("toplama yapmak için '+' ye basiniz,çıkarma yapmak için '-',çarpma yapmak için '*' ve bölme yapmak için '/' basınız.\n");
  scanf("%c",&a);
  if (a=='+')
  {
    printf("iki sayı giriniz:");
    scanf("%lf %lf",&x, &y);
    result= x+y;
    printf("sayilarin toplami:%.lf",result);
  }
  else if(a=='-'){
    printf("iki sayi giriniz");
    scanf("%lf %lf " , &x ,&y);
    result=x-y;
    printf("sayıların çıkarımı:%.lf" ,result);
  }
  else if(a=='*'){
    printf("iki sayi giriniz");
    scanf("%lf %lf" ,&x ,&y);
    result=x*y;
    printf("sayıların çarpımı=%.lf",result);
  }
  else{
    printf("iki sayi giriniz");
    scanf("%lf %lf" ,&x ,&y);
    result=x/y;
    printf("sayıların bölümü=%.lf",result);
  }
  
  
  return 0;
}
